@import "/icon.wxss";
@import "/base-rpx.wxss";

Page{
  background: #E5323A
}
.share_header{
  padding-bottom: 20rpx;
  background: unset;
}
.share_header>image{
  width: 750rpx;
  height: 1460rpx;
}
.share_header>.share_action{
  padding: 20rpx;
}
.share_header>.share_action.type_btns{
  display: flex;
  justify-content: center;
  position:absolute;
  bottom: -140px;
  width: 100%;
}
.share_header>.share_action.type_btns>button{
  /*background: #000 !important;*/
  background-image: url(https://youbao-1251769479.cos.ap-chengdu.myqcloud.com/share_gift/share_friends.png)!important;
  background-size: 100%;
  background-position: center;
  color: #fff !important;
  width: 325px;
  height:60px;
  background-color: #E5323A!important;
}
.share_header>.share_action.type_btns>button:after{
  border: 0
}
.share_header>.share_action.type_btns>button:first-child{
  margin-right: 10rpx
}
.share_header>.share_action.type_btns>button:last-child{
  margin-left: 10rpx;
  background-image: url(https://youbao-1251769479.cos.ap-chengdu.myqcloud.com/share_gift/share_social.png)!important;
}
.share_header>.share_action.type_btns>button>image{
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}
.share_header>.share_action.type_input{
  padding: 20rpx 60rpx;
}
.share_header>.share_action.type_input>form-group{
  padding:0;
  margin:0 20rpx 20rpx 20rpx;
  border:1px solid #FCCE2F;
  border-radius:8rpx;
  min-height: unset;
  height: 80rpx;
}
.share_header>.share_action.type_input>form-group>input{
  padding-left: 20rpx;
  font-size: 24rpx;
}
.share_header>.share_action.type_input>form-group>button{
  height:56rpx;
  background:#F78F43 !important;
  color:#fff;
  font-size:24rpx;
  margin-right:10rpx;
}

.share_header>.share_action.type_input>button.btn-receive{
  margin: 20rpx;
}
.share_header>.share_action.type_coupon>.coupon_tips{
  text-align:center;
  line-height:1.75;
  padding:30rpx 0;
  background:rgba(255,255,255,1);
  border-radius:16rpx;
  margin:0 30rpx;
}

.share_header>.share_action.type_coupon>.coupon_tips .toUser{
  text-decoration:underline
}

.share_header>.share_action.type_coupon>.coupon_tips .toGift {

}
.page_block{
  margin-top: 10rpx;
  padding:0 40rpx 40rpx 40rpx;
  /*background: #fff;*/
}
.page_block>.block_title{
  text-align: center;
  position: relative;
  padding: 40rpx 0;
}
.page_block>.block_title::after{
  position: absolute;
  content: "";
  left: 210rpx;
  top: 58rpx;
  width: 250rpx;
  height: 2rpx;
  background: rgba(255,255,255,.5);
}
.page_block>.block_title>text{
  font-size:28rpx;
  padding:5rpx 20rpx;
  background:#FCCE2F;
  line-height:28rpx;
  height:38rpx;
  display:inline-block;
  position: relative;
  z-index: 10;
}
.page_block.share_friends>.block_body>.friends_item{
  line-height: 2;
}
.page_block.share_friends>.block_body>.friends_item>text:last-child{
  float: right;
}
.page_block.share_rule>.block_body{
}
.page_block.share_rule>.block_body>text{
  line-height: 1.75;
  text-align:left;
  /*text-indent:40rpx;*/
  display: block;
}
.type_oldman {
  text-align: center;
  line-height: 2;
  position: absolute;
  top: 670px;
  left: 0;
  text-align:center;
  width: 100%;
}
.type_oldman .toUser{
  text-decoration:underline
}
.toSnsModal dialog {
  width: 600rpx;
}
.toSnsModal .snsModal-bg{
  background: url('https://youbao-1251769479.cos.ap-chengdu.myqcloud.com/share/share_sns.jpg') center no-repeat;
  background-size: 100% 100%;
  height: 800rpx;
  position: relative;
}
.toSnsModal .snsModal-bg .snsModal-nickname{
  position:absolute;
  top:400rpx;
  width:300rpx;
  left:140rpx;
  font-size:24rpx;
  line-height:30rpx;
}
.btn-friend{
  width: 140px;
  height: 60px;
