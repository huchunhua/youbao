
/**index.wxss**/
page{
  background-color: white;
}
image{
  width: 50%;
  margin-left: 25%;
  margin-top: 10%;
  margin-bottom: 5%;
}
#register,#password{
  width: 92%;
  margin-left: 4%;
}
input{
  background-color: #F7F7F7;
  font-size: 0.8em;
  padding: 0.8em 0;
}
#phone{
  margin-top: 1em;
  width: 90%;
  margin-left: 4%;
  padding-left: 2%;
}
#code{
  width: 60%;
  padding-left: 2%;
  float: left;
}
#register{
  background-color: black;
  color: white;
  font-size: 0.9em;
  margin-top: 1em;
  padding: 0.3em 0;
}
#register:active{
  background-color: rgba(0, 0, 0, 0.8);
  color: white;
}
#password button{
  width: 35%;
  float: right;
  font-size: 0.8em;
  border-radius: 0;
  line-height: inherit;
  padding: 1em 0;
}
#password{
  margin-top: 1em;
  overflow: hidden;
  padding: 0.3em 0;
}
#out{
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.514);
  top: 0;
  left: 0;
  z-index: 1100
}
#success{
  position: fixed;
  width: 50%;
  left: 15%;
  top: 30%;
  background-color: white;
  border-radius: 1em;
  z-index: 1101;
  overflow: hidden;
  padding: 10%;
}
#title{
  display: inline-block;
  width: 100%;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
}
#remark{
  display: inline-block;
  width: 90%;
  margin: 5% 0;
  margin-left: 5%;
  color: #c7c7c7;
  font-size: 24rpx;
}

#success button{
  font-size: 32rpx;
  line-height: inherit;
  padding: 25rpx 0;
  border-radius: 45rpx;
}
#submit_{
  background-color: #1CAC1A;
  color: white;
  margin-top: 20%;
  margin-bottom: 3%;
}
#fail{
  display: inline-block;
  font-size: 24rpx;
  color: #7491CF;
  margin-top: 8%;
  border-bottom: 1px solid #7491CF;
}