.serve_item .item{
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  font-size: 24rpx;
  color:#666666;
}
.serve_type{
  padding:40rpx 0;
  border-bottom: 1px solid #F4F4F4;
  font-size: 28rpx;
  font-weight: 700;
  color:#0e0e0e;
}
.serve_type image{
  float:right;
  width: 10rpx;
  height: 20rpx;
}