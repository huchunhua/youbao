/**index.wxss**/
@import "/icon.wxss";
@import "/base-rpx.wxss";
Page{
  background: #f4f4f4;
}
#top{
  width: 100%;
  height: 400rpx;
}
#out{
  /*padding:0 20rpx;*/
  background:#fff;
}
.detail{
  padding:20rpx;
  font-size: 26rpx;
  border-bottom: 1px solid #F4F4F4;

}
.detail text {
  width:660rpx;
  display:inline-block;
  letter-spacing: 2rpx;
  line-height: 32rpx;
}
.detail image{
  width:32rpx;
  height:32rpx;
  margin-right:15rpx;
  float:left;
}
button{
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 56rpx;
}
.coupon-list {
  margin-top: 20rpx;
  padding: 20rpx 0 10rpx 0;
  background: #fff;
}
.coupon-list .coupon-card{
  margin:0 20rpx 20rpx;
}
#fixed{
  position: fixed;
  width: 750rpx;
  bottom: 0;
  left: 0;
  padding: 20rpx;
  background: #fff;
}
#fixed button{
  width: 342rpx;
  float: left;
  background-color: #4D6BFF !important;
  color: white;
  border: none;
  height: 78rpx;
  line-height: 78rpx;
  border-radius: 78rpx;
}
#fixed button.click{
  background-color: #D0D0D0 !important;
  color: rgb(165, 161, 161);
  border: none;
}
.station_intro {
  margin-top:20rpx;
  padding: 20rpx 20rpx 120rpx 20rpx;
  background: #fff;
  font-size: 24rpx;
}
.station_intro rich-text{
  font-size: 24rpx;
}