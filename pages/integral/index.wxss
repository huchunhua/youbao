@import "/icon.wxss";
@import "/base-rpx.wxss";
page{
  background-color: #f4f4f4;
}
#integral{
  width:100%;
  height: 240rpx;
  background-image: url(https://youbao-1251769479.cos.ap-chengdu.myqcloud.com/oil/person/bg.png);
  background-size: 100%;
}
.avaterimg,.avaterimg image{
  margin: 55rpx 20rpx;
  width: 130rpx;
  height: 130rpx;
  border-radius: 130rpx;
}
.infowrap{
  padding:70rpx 0;
}
.infowrap .name{
  margin-bottom: 20rpx;
  font-size: 30rpx;
  color: #131313
}
.infowrap .grade{
  margin-top: 20rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 40rpx;
  padding:0 20rpx;
  background-color: #242424;
  color:#fff;
  font-size: 22rpx;
}
.icon_grade{
  margin-right: 8rpx;
  width: 20rpx;
  height: 20rpx;
}
.icon_integral{
  width: 40rpx;
  height: 20rpx;
}
.todetail{
  margin-top: 90rpx;
  height: 60rpx;
  border-radius: 60rpx 0 0 60rpx;
  line-height: 60rpx;
  padding:0 40rpx 0;
  background-color: #242424;
  color:#fff;
  font-size: 24rpx;
}
.integral_desc,.grade_desc{
  background-color: #fff;
  margin-top: 10rpx;
  color:#282828;
  font-size: 22rpx;
  padding:20rpx;
}
.block_tit{
  margin-left: 20rpx;
  padding:30rpx 0;
  font-size: 26rpx;
  border-bottom: 1px solid #f4f4f4;
}