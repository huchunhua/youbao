    width: 120rpx;
    height: 120rpx;
    margin-right:30rpx;
}
.goods-item .action .goods-num {
    font-size: 24rpx;
    color: #999;
}
.goods-item .action .stepper image {
    width: 36rpx;
    height: 36rpx;
    display: inline-flex;
    float:left;

}
