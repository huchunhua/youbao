    line-height: 36rpx;
    display: inline-flex;
    font-size: 24rpx;
    padding: 0 20rpx;
    color: #666;
    float:left;
}
.goods-item .content .goods-desc{
    font-size: 24rpx;
    line-height:40rpx;
}
.goods-item .content .goods-price{
