/**index.wxss**/
page{
  width: 96%;
  padding: 0 2%;
}
#address_city{
  width: 96%;
  padding: 0 2%;
  font-size: 0.8em;
  position: fixed;
  top: 0;
  left: 0;
  background-color: white;
  z-index: 100;
}
#city{
  width: 19%;
  float: left;
  padding: 0.6em 0;
  text-align: center;
}
#city image{
  width: 1em;
  height: 1em;
  margin-left: 0.3em;
}
#search{
  float: right;
  width: 80%;
  border: 1px solid #ececec;
  border-radius: 0.3em;
  padding: 0.4em 0;
  overflow: hidden;
}
#search image{
  width: 1em;
  height: 1em;
  margin-right: 0.2em;
  margin-left: 0.3em;
  float: left;
  position: relative;
  top: 0.4em;
}
#search input{
  width: 90%;
  float: left;
  height: auto;
  padding: 0;
  text-align: center;
  min-height: none;
}


#shop{
  margin-top: 12%;
}
.shop{
  overflow: hidden;
  border-bottom: 1px solid #F4F4F4;
  padding: 19rpx 0;
}
.shop:first-child{
  padding-top: 0;
}
.shop:last-child{
  border: none;
}
.shop>image{
  float: left;
  width: 180rpx;
  height: 180rpx;
}
.shop_content{
  float: left;
  width: 72%;
  margin-left: 3%;
  position: relative;
  overflow: hidden;
}
.shop_content>text,.shop_content>view{
  float: left;
}
.shop_content image{
  width: 29rpx;
  height: 29rpx;
  position: relative;
  top: 0.07em;
  margin-right: 0.3em;
}
.shop_content text{
  display: inline-block;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: bold;
  font-size: 30rpx;
  margin-top: 18rpx;
}
.shop_content text.distance{
  width: auto;
  text-align: center;
  position: absolute;
  right: 0;
  font-size: 22rpx;
  height: 36rpx;
  line-height: 36rpx;
  top: 13rpx;
  background-color: #EFEFEF;
  color: #707070;
  padding: 0 0.4em;
  margin-top: 0;
}
.shop_content view{
  width: 100%;
  font-size: 26rpx;
  color: #888888;
  margin-top: 25rpx;
}
.shop_content view:last-child{
  font-size: 24rpx;
  margin-top: 27rpx;
  color: #B8B8B8;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
#nearby_nav{
  border-bottom: 1px solid #F8F8F8;
  white-space: nowrap;
  background-color: white;
  width: 100%;
  float: left;
}
.text_{
  display: inline-block;
  padding: 26rpx 0;
  margin: 0 26rpx;
  font-size: 28rpx;
  position: relative;
  color: #CECECE;
  font-weight: bold;
}
.text_.click{
color: black;
}
.text_.click text{
  position: absolute;
  width: 60%;
  left: 20%;
  bottom: 0;
  border-bottom: 3px solid black
}
.empty{
  display: inline-block;
  font-size: 0.8em;
  width: 100%;
  text-align: center;
  position: relative;
  top: 7%;
  color: rgb(175, 171, 171)
}